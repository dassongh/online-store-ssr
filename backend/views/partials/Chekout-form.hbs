<section class="chekout">
  <div class="container chekout__container">
    <div class="chekout__form">
      <form class="form">
        <div class="form__contact">
          <h3>Contact information</h3>
          <input type="text" name="contact" placeholder="Email or phone number" />
          <label class="form__checkbox">
            <input type="checkbox" name="newsletter"/>
            <span>Keep me up to date on news and exclusive offers</span>
          </label>
        </div>
        <div class="form__address">
          <h3>Shipping address</h3>
          <ul class="form__fullname">
            <li><input type="text" name="FirstName" placeholder="First name" /></li>
            <li><input type="text" name="LastName" placeholder="Last name" /></li>
          </ul>
          <input type="text" name="address" placeholder="Address" />
          <input type="text" name="apartments" placeholder="Apartments, suite, etc" />
          <input type="text" name="city" placeholder="City" />
          <ul class="form__country">
            <li><input type="text" name="country" placeholder="Country, region" /></li>
            <li><input type="text" name="postalCode" placeholder="Postal code" /></li>
          </ul>
          <div class="form__buttons">
            <button class="form__confirm" type="submit">confirm</button>
            <a class="form__return" href="/order/cart">
              <svg enable-background="new 0 0 512.001 512.001" version="1.1" viewBox="0 0 512 512" width="18px">
