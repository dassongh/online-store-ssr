<section class="product"> 
  <div class="container product__container">
    <div class="product__images">
      <div class="product__image" >
        <img
          src="{{ product.image_url }}"
          alt="{{ product.title }}"
          data-image="{{ product.id }}"
        />

        {{#if (isSaleAndNew product.old_price product.isNew)}}
        <div class="thumb__discount thumb__discount--both"><span class="thumb__discount-number">-20%</span></div>
        <div class="thumb__discount thumb__discount--both-new"><span class="thumb__discount-number">new</span></div>

        {{else}}

        {{#if product.old_price}}
        <div class="thumb__discount" ><span class="thumb__discount-number">-20%</span></div>
        {{/if}}
        
        {{#if product.isNew}}
        <div class="thumb__discount thumb__discount--sale"><span class="thumb__discount-number">new</span></div>
        {{/if}}

        {{/if}}

      </div>
    </div>

    <div class="product__info">
      <div class="product__info-top">
        <h1 class="product__heading" data-title="{{ product.id }}">{{ product.title }}</h1>
        <div>
          <div class="clip-star"></div>
              <div class="clip-star"></div>
              <div class="clip-star"></div>

              {{#if (isThreeStar product.raiting)}}
              <div class="clip-star clip-star--empty"></div>
              <div class="clip-star clip-star--empty"></div>
              {{/if}}

              {{#if (isFourStar product.raiting)}}
              <div class="clip-star"></div>
              <div class="clip-star clip-star--empty"></div>
              {{/if}}

              {{#if (isFiveStar product.raiting)}}
              <div class="clip-star"></div>
              <div class="clip-star"></div>
              {{/if}}
        </div>
        <p class="product__price" data-price="{{ product.id }}">{{ product.price }}</p>
        {{#if product.old_price}}
        <span class="card-item__price card-item__old-price">{{ product.old_price }}</span>
        {{/if}}
      </div>

      <div class="product__info-main">
        <p class="product__info-text">{{ product.description }}</p>
        <p class="product__info-text">Category: {{ product.category }}</p>
        <div class="product__info-action">
          <p class="product__info-text product__info-text--last">Quantity:</p>
          <div class="product__info-quantity">
            <button class="product__info-quantityBtn" data-minus="{{ product.id }}">
              <svg viewBox="0 0 24 24" width="18px" height="18px">
                <g data-name="Layer 2">
                  <g data-name="arrow-left">
                    <rect width="24" height="24" opacity="0" />
                    <path
                      d="M13.54 18a2.06 2.06 0 0 1-1.3-.46l-5.1-4.21a1.7 1.7 0 0 1 0-2.66l5.1-4.21a2.1 2.1 0 0 1 2.21-.26 1.76 1.76 0 0 1 1.05 1.59v8.42a1.76 1.76 0 0 1-1.05 1.59 2.23 2.23 0 0 1-.91.2z"
                    />
                  </g>
                </g>
              </svg>
            </button>
            <span class="product__info-quantityText" data-quantity>0</span>
            <button class="product__info-quantityBtn" data-plus="{{ product.id }}">
              <svg viewBox="0 0 24 24" width="18px" height="18px">
                <g data-name="Layer 2">
                  <g data-name="arrow-right">
                    <rect transform="rotate(180 12 12)" width="24" height="24" opacity="0" />
                    <path
                      d="M10.46 18a2.23 2.23 0 0 1-.91-.2 1.76 1.76 0 0 1-1.05-1.59V7.79A1.76 1.76 0 0 1 9.55 6.2a2.1 2.1 0 0 1 2.21.26l5.1 4.21a1.7 1.7 0 0 1 0 2.66l-5.1 4.21a2.06 2.06 0 0 1-1.3.46z"
                    />
                  </g>
                </g>
              </svg>
            </button>
          </div>
          <button class="product__info-addBtn" data-add="{{ product.id }}">add to cart</button>
          <button class="product__info-secBtn">
            <svg viewBox="0 0 15 15" width="22px" height="20px">
