 <section class="weekDeals">
        <div class="container">
          <div class="weekDeals__top">
            <div class="weekDeals__sale">
              {{> lightGreenBackIcon }}
              <p class="weekDeals__sale-text">sale of 35 %</p>
            </div>
            <h2 class="weekDeals__heading">Deals of the week</h2>
            <ul class="weekDeals__time-list">
              <li class="weekDeals__time-item">
                {{> dashedCircleIcon }}
                <div class="weekDeals__time-info">
                  <span class="weekDeals__number" data-days></span>
                  <span class="weekDeals__time-text">Days</span>
                </div>
              </li>
              <li class="weekDeals__time-item">
                {{> dashedCircleIcon }}
                <div class="weekDeals__time-info">
                  <span class="weekDeals__number" data-hours></span>
                  <span class="weekDeals__time-text">Hours</span>
                </div>
              </li>
              <li class="weekDeals__time-item">
                {{> dashedCircleIcon }}
                <div class="weekDeals__time-info">
                  <span class="weekDeals__number" data-mins></span>
                  <span class="weekDeals__time-text">Mins</span>
                </div>
              </li>
              <li class="weekDeals__time-item">
                {{> dashedCircleIcon }}
                <div class="weekDeals__time-info">
                  <span class="weekDeals__number" data-secs></span>
                  <span class="weekDeals__time-text">Secs</span>
                </div>
              </li>
            </ul>
          </div>

          <div class="weekDeals__main">
            <ul class="weekDeals__main-list">

              {{#each ultraSaleProducts}}
              <li class="weekDeals__main-item">
                <div class="thumb weekDeals__main-thumb" data-id="{{ id }}">
                  <img src="{{ image_url }}" alt="{{ category }}" data-image="{{ id }}">

                    {{#if (isSaleAndNew old_price isNew)}}
                    <div class="thumb__discount thumb__discount--both"><span class="thumb__discount-number">-35%</span></div>
                    <div class="thumb__discount thumb__discount--both-new"><span class="thumb__discount-number">new</span></div>

                    {{else}}

                    {{#if old_price}}
                    <div class="thumb__discount"><span class="thumb__discount-number">-35%</span></div>
                    {{/if}}

                    {{#if isNew}}
                    <div class="thumb__discount thumb__discount--sale"><span class="thumb__discount-number">new</span></div>
                    {{/if}}

                    {{/if}}

                  <button class="thumb__like-btn" data-like="{{ id }}">
                    {{> likeBtnIcon }}
                  </button>
                  <ul class="thumb__buttons-list">
                    <li class="thumb__button-item">
                      <button class="thumb__button">
                        {{> refreshBtnIcon }}
                      </button>
                    </li>
                    <li class="thumb__button-item">
                      <button class="thumb__button-add-to-card" data-add="{{ id }}">
                        {{> smallCartIcon }}
                        Add to cart
                      </button>
                    </li>
                    <li class="thumb__button-item">
                      <a href="product/:{{ id }}" class="thumb__button">
                        {{> smallSearchIcon }}
                      </a>
                    </li>
                  </ul>
                </div>
                <div class="raiting">
                  <div class="clip-star"></div>
                  <div class="clip-star"></div>
                  <div class="clip-star"></div>

                  {{#if (isThreeStar raiting)}}
                  <div class="clip-star clip-star--empty"></div>
                  <div class="clip-star clip-star--empty"></div>
                  {{/if}}

                  {{#if (isFourStar raiting)}}
                  <div class="clip-star"></div>
                  <div class="clip-star clip-star--empty"></div>
                  {{/if}}

                  {{#if (isFiveStar raiting)}}
                  <div class="clip-star"></div>
                  <div class="clip-star"></div>
                  {{/if}}

                </div>
                <p class="card-item__text" data-title="{{ id }}">{{ title }} </p>
                <p class="card-item__price" data-price="{{ id }}">{{ price }} 

                {{#if old_price}}
                <span class="card-item__price card-item__old-price">{{ old_price }}</span>
                {{/if}}

                </p>
              </li>
              {{/each}}

            </ul>
          </div>
        </div>
      </section>
