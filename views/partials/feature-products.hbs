<section class="feature">
  <div class="container">
    <div class="collection__choice-top">
      <h2 class="collection__heading">Feature Products</h2>
        <ul class="header__links collection__links">
        <li class="header__link-item collection__item">
          <a href="/products/?category=all" class="header__link header__link--current collection__choice-link--current">All</a>
        </li>
        <li class="header__link-item collection__item">
          <a href="/products/?category=meats" class="header__link">Meats</a>
        </li>
        <li class="header__link-item collection__item">
          <a href="/products/?category=vegetables" class="header__link">Vegetables</a>
        </li>
        <li class="header__link-item collection__item">
          <a href="/products/?category=grainAndNuts" class="header__link">Grain</a>
        </li>
        <li class="header__link-item collection__item">
          <a href="/products/?category=fruits" class="header__link">Fruits</a>
        </li>
        <li class="header__link-item collection__item">
          <a href="/products/?category=all" class="header__link">Other</a>
        </li>
      </ul>
    </div>

    <div class="feature__main">
      <div class="feature__banner">
        <span class="feature__banner-text">save up to</span>
        <span class="feature__banner-accent">50% Up</span>
        <a href="/products/?category=all" class="feature__banner-link offers__link">shop now</a>
      </div>

      <ul class="feature-list">

        {{#each featureProducts}}
        <li class="feature-item">
          <div class="thumb feature__thumb" data-id="{{ id }}">

            <img src="{{ image_url }}" alt="{{ category }}" data-image="{{ id }}">

              {{#if (isSaleAndNew old_price isNew)}}
              <div class="thumb__discount thumb__discount--both"><span class="thumb__discount-number">-35%</span></div>
              <div class="thumb__discount thumb__discount--both-new"><span class="thumb__discount-number">new</span></div>

              {{else}}

              {{#if old_price}}
              <div class="thumb__discount"><span class="thumb__discount-number">-35%</span></div>
              {{/if}}

              {{#if isNew}}
              <div class="thumb__discount thumb__discount--sale"><span class="thumb__discount-number">new</span></div>
              {{/if}}

              {{/if}}

            <button class="thumb__like-btn" data-like="{{ id }}">
              {{> likeBtnIcon }}
            </button>
            <ul class="thumb__buttons-list">
              <li class="thumb__button-item">
                <button class="thumb__button">
                  {{> refreshBtnIcon }}
                </button>
              </li>
              <li class="thumb__button-item">
                <button class="thumb__button-add-to-card" data-add="{{ id }}">
                  {{> smallCartIcon }}
                  Add to cart
                </button>
              </li>
              <li class="thumb__button-item">
                <a href="product/:{{ id }}" class="thumb__button">
                  {{> smallSearchIcon }}
                </a>
              </li>
            </ul>
          </div>
          <div class="raiting">
            <div class="clip-star"></div>
            <div class="clip-star"></div>
            <div class="clip-star"></div>

            {{#if (isThreeStar raiting)}}
            <div class="clip-star clip-star--empty"></div>
            <div class="clip-star clip-star--empty"></div>
            {{/if}}

            {{#if (isFourStar raiting)}}
            <div class="clip-star"></div>
            <div class="clip-star clip-star--empty"></div>
            {{/if}}

            {{#if (isFiveStar raiting)}}
            <div class="clip-star"></div>
            <div class="clip-star"></div>
            {{/if}}

          </div>
          <p class="card-item__text" data-title="{{ id }}">{{ title }} </p>
          <p class="card-item__price" data-price="{{ id }}">{{ price }}

          {{#if old_price}}
          <span class="card-item__price card-item__old-price">{{ old_price }}</span>
          {{/if}}

          </p>
        </li>
        {{/each}}

      </ul>
    </div>
  </div>
</section>